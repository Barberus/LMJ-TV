<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="GTO"> <!-- for Dashboard -->
		<control type="panel" id="$PARAM[id]">
			<include>openclosefanart</include>
			<left>0</left>
			<top>0</top>
			<widht>1800</widht>
			<height>105</height>
			<orientation>horizontal</orientation>
			<onclick condition="!Container($PARAM[id]).Position(0)">RunPlugin(plugin://script.service.gto?action=info&amp;item=$INFO[ListItem.Property(Item)])</onclick>
			<pagecontrol/>
			<scrolltime tween="circle" easing="out">800</scrolltime>
			<orientation>horizontal</orientation>
			<visible>$PARAM[visible]</visible>
			<visible>System.HasAddon(script.service.gto)</visible>
			<itemlayout height="105" width="360">
				<include content="DashItemlayout">
					<param name="Dash_Label2" value="$INFO[ListItem.Property(GTO_Dash_FirstplaceLabel)]$INFO[ListItem.Label2]" />
					<param name="Dash_Icon" value="$INFO[ListItem.Icon]" />
					<param name="aspect" value="scale"/>
					<param name="id" value="$PARAM[id]"/>
				</include>
				<control type="image">
					<description>busy</description>
					<top>41</top>
					<height>25</height>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[ListItem.Property(BusyIcon)]</texture>
					<animation effect="rotate" start="0" end="360" center="auto" time="3500" loop="true" condition="true">conditional</animation>
					<visible>String.IsEmpty(Container($PARAM[id]).ListItem(1).Label)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="105" width="360" condition="Control.HasFocus($PARAM[id])">
				<include content="DashFocusedlayout">
					<param name="Dash_Label1" value="$INFO[ListItem.Label]" />
					<param name="Dash_Label2" value="$INFO[ListItem.Property(GTO_Dash_FirstplaceLabel)]$INFO[ListItem.Property(channel)]$INFO[ListItem.Label2]" />
					<param name="Dash_Label3" value="$INFO[ListItem.Genre]" />
					<param name="Dash_Icon" value="$INFO[ListItem.Icon]" />
					<param name="aspect" value="scale"/>
				</include>
			</focusedlayout>
			<focusedlayout height="105" width="360" condition="!Control.HasFocus($PARAM[id])">
				<include content="DashItemlayout">
					<param name="Dash_Label2" value="$INFO[ListItem.Property(GTO_Dash_FirstplaceLabel)]$INFO[ListItem.Label2]" />
					<param name="Dash_Icon" value="$INFO[ListItem.Icon]" />
					<param name="aspect" value="scale"/>
				</include>
			</focusedlayout>
			<content>
				<item>
					<description>GTO First Label</description>
					<property name="GTO_Dash_FirstplaceLabel">German Telecast Offers</property>
					<onclick>ActivateWindow(tvchannels,return)</onclick>
				</item>
			</content>
			<include condition="System.HasAddon(script.service.gto)">GTOContent</include>
			<include content="BusyItem">
				<param name="id" value="$PARAM[id]"/>
				<param name="icon" value="Busy.png"/>
			</include>
		</control>
	</include>
	<include name="GTOContent">
		<content target="pvr">plugin://script.service.gto?action=getcontent&amp;ts=$INFO[Window(Home).Property(GTO.timestamp)]</content>
	</include>
</includes>
