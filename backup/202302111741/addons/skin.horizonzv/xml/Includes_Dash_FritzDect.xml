<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="FritzDect">
		<control type="panel" id="$PARAM[id]">
			<include>openclosefanart</include>
			<left>0</left>
			<top>0</top>
			<widht>1800</widht>
			<height>105</height>
			<orientation>horizontal</orientation>
			<visible>$PARAM[visible]</visible>
			<onclick condition="String.IsEqual(ListItem.Property(type),switch)">RunScript(script.program.fritzact,action=toggle&amp;ain=$INFO[ListItem.Label2])</onclick>
			<onclick condition="String.IsEqual(ListItem.Property(type),group)">RunScript(script.program.fritzact,action=toggle&amp;ain=$INFO[ListItem.Label2])</onclick>
			<onclick condition="String.IsEqual(ListItem.Property(type),thermostat)">RunScript(script.program.fritzact,action=temp&amp;ain=$INFO[ListItem.Label2])</onclick>
			<onclick>Notification(wird geschaltet ...,FritzDect ($INFO[ListItem.Label]),2000)</onclick>
			<itemlayout height="105" width="360">
				<control type="image">
					<description>background</description>
					<right>5</right>
					<colordiffuse>green</colordiffuse>
					<animation effect="fade" end="40" condition="true">Conditional</animation>
					<texture>WhiteBack.png</texture>
					<visible>String.Contains(ListItem.Property(state),$LOCALIZE[301616])</visible>
				</control>
				<control type="image">
					<description>background</description>
					<right>5</right>
					<colordiffuse>red</colordiffuse>
					<animation effect="fade" end="40" condition="true">Conditional</animation>
					<texture>WhiteBack.png</texture>
					<visible>String.Contains(ListItem.Property(state),$LOCALIZE[301618])</visible>
				</control>
				<include>FritzDect_layout</include>
				<control type="image">
					<left>1</left>
					<right>6</right>
					<top>1</top>
					<bottom>1</bottom>
					<colordiffuse>menudiffuse</colordiffuse>
					<texture border="4" background="true">BlackBack.png</texture>
					<visible>Skin.HasSetting(WidgetDimDashrows)|Control.HasFocus($PARAM[id])</visible>
				</control>
				<control type="image">
					<description>busy</description>
					<left>4</left>
					<top>41</top>
					<height>25</height>
					<width>70</width>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[ListItem.Property(BusyIcon)]</texture>
					<animation effect="rotate" start="0" end="360" center="auto" time="3500" loop="true" condition="true">conditional</animation>
					<visible>String.IsEmpty(Container($PARAM[id]).ListItem(1).Label)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="105" width="360">
				<control type="group">
					<include>focuseffect</include>
					<control type="image">
						<description>background</description>
						<right>5</right>
						<colordiffuse>green</colordiffuse>
						<texture>WhiteBack.png</texture>
						<visible>String.Contains(ListItem.Property(state),$LOCALIZE[301616])</visible>
						<visible>!Control.HasFocus($PARAM[id])</visible>
					</control>
					<control type="image">
						<description>background</description>
						<right>5</right>
						<colordiffuse>red</colordiffuse>
						<texture>WhiteBack.png</texture>
						<visible>String.Contains(ListItem.Property(state),$LOCALIZE[301618])</visible>
						<visible>!Control.HasFocus($PARAM[id])</visible>
					</control>
					<control type="image">
						<description>background</description>
						<right>5</right>
						<colordiffuse>description</colordiffuse>
						<texture>WhiteBack.png</texture>
						<visible>Control.HasFocus($PARAM[id])</visible>
					</control>
					<include>FritzDect_layout</include>
				</control>
			</focusedlayout>
			<content>
				<item>
					<label/>
					<property name="BusyIcon">Busy.png</property>
					<visible>String.IsEmpty(Container($PARAM[id]).ListItem(1).Label)</visible>
				</item>
			</content>
			<include condition="System.HasAddon(script.program.fritzact)">FritzdectContent</include>
			<include content="BusyItem">
				<param name="id" value="$PARAM[id]"/>
				<param name="icon" value="Busy.png"/>
			</include>
		</control>
	</include>
	<include name="FritzDect_layout">
		<control type="image">
			<right>5</right>
			<texture>Shadow.png</texture>
			<include>openclosevisible</include>
		</control>
		<control type="image">
			<description>background</description>
			<colordiffuse>menudiffuse</colordiffuse>
			<right>5</right>
			<texture border="4" background="true">masks/Default_sharp.png</texture>
		</control>
		<control type="label">
			<left>80</left>
			<right>10</right>
			<top>4</top>
			<height>30</height>
			<font>bebas24</font>
			<align>left</align>
			<textcolor>white</textcolor>
			<label>$INFO[ListItem.Property(state)]$INFO[ListItem.Property(mode), - ,]</label>
			<visible>String.IsEqual(ListItem.Property(type),switch)</visible>
		</control>
		<control type="label">
			<left>80</left>
			<right>20</right>
			<top>34</top>
			<height>30</height>
			<font>bebas24</font>
			<align>left</align>
			<textcolor>white</textcolor>
			<label>$INFO[ListItem.Property(temperature),,]$INFO[ListItem.Property(power), / ,]$INFO[ListItem.Property(energy), / ,]</label>
			<visible>String.IsEqual(ListItem.Property(type),switch)</visible>
		</control>
		<control type="label">
			<left>80</left>
			<right>20</right>
			<top>8</top>
			<height>30</height>
			<font>bebas24</font>
			<align>left</align>
			<textcolor>white</textcolor>
			<label>$INFO[ListItem.Property(battery),, $LOCALIZE[301620]]</label>
			<visible>String.IsEqual(ListItem.Property(type),thermostat)</visible>
		</control>
		<control type="label">
			<left>80</left>
			<right>20</right>
			<top>34</top>
			<height>30</height>
			<font>bebas24</font>
			<align>left</align>
			<textcolor>white</textcolor>
			<label>$INFO[ListItem.Property(temperature),,]$INFO[ListItem.Property(set_temp), / ,]</label>
			<visible>String.IsEqual(ListItem.Property(type),thermostat)</visible>
		</control>
		<control type="image">
			<description>background</description>
			<left>80</left>
			<right>20</right>
			<top>66</top>
			<height>2</height>
			<colordiffuse>menudiffuse</colordiffuse>
			<texture border="1">Separator1.png</texture>
		</control>
		<control type="label">
			<left>80</left>
			<right>20</right>
			<top>70</top>
			<height>30</height>
			<font>bebas24</font>
			<align>left</align>
			<textcolor>white</textcolor>
			<label>$INFO[ListItem.Label]</label>
		</control>
		<control type="image">
			<description>background</description>
			<left>5</left>
			<top>8</top>
			<width>70</width>
			<height>90</height>
			<aspectratio>keep</aspectratio>
			<texture>$INFO[ListItem.Icon]</texture>
		</control>
	</include>
	<include name="FritzdectContent">
		<content target="programs">plugin://script.program.fritzact?ts=$INFO[Window(Home).Property(fritzact.timestamp)]</content>
	</include>
</includes>
