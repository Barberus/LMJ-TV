<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="5DaysWeather_Dash"> <!-- for Dashboard -->
		<control type="panel" id="$PARAM[id]">
			<include>openclosefanart</include>
			<left>0</left>
			<top>0</top>
			<widht>1800</widht>
			<height>105</height>
			<orientation>horizontal</orientation>
			<pagecontrol/>
			<scrolltime tween="circle" easing="out">800</scrolltime>
			<orientation>horizontal</orientation>
			<visible>$PARAM[visible]</visible>
			<itemlayout height="105" width="360">
				<include>WeatherDash_ControlLayout</include>
				<control type="image">
					<left>1</left>
					<right>6</right>
					<top>1</top>
					<bottom>1</bottom>
					<colordiffuse>menudiffuse</colordiffuse>
					<texture border="4" background="true">BlackBack.png</texture>
					<visible>Skin.HasSetting(WidgetDimDashrows)|Control.HasFocus($PARAM[id])</visible>
				</control>
				<control type="image">
					<description>busy</description>
					<left>4</left>
					<top>41</top>
					<height>25</height>
					<width>70</width>
					<aspectratio>keep</aspectratio>
					<texture>$INFO[ListItem.Property(BusyIcon)]</texture>
					<animation effect="rotate" start="0" end="360" center="auto" time="3500" loop="true" condition="true">conditional</animation>
					<visible>String.IsEmpty(Container($PARAM[id]).ListItem(1).Label)</visible>
				</control>
			</itemlayout>
			<focusedlayout height="105" width="360">
				<control type="group">
				<include>focuseffect</include>
					<control type="image">
						<description>background</description>
						<right>5</right>
						<colordiffuse>description</colordiffuse>
						<!-- <colordiffuse>$VAR[BackgroundOverlayColorDialog]</colordiffuse> -->
						<texture border="4">WhiteBack.png</texture>
					</control>
					<include>WeatherDash_ControlLayout</include>
				</control>
			</focusedlayout>
			<content>
				<item>
					<label/>
					<property name="BusyIcon">Busy.png</property>
					<visible>String.IsEmpty(Container($PARAM[id]).ListItem(1).Label)</visible>
				</item>
			</content>
			<content>
				<include content="WeatherContentDefaultItem">
					<param name="day_id" value="1"/>
					<param name="visible" value="true"/>
				</include>
				<include content="WeatherContentDefaultItem">
					<param name="day_id" value="2"/>
					<param name="visible" value="true"/>
				</include>
				<include content="WeatherContentDefaultItem">
					<param name="day_id" value="3"/>
					<param name="visible" value="true"/>
				</include>
				<include content="WeatherContentDefaultItem">
					<param name="day_id" value="4"/>
					<param name="visible" value="true"/>
				</include>
				<include content="WeatherContentDefaultItem">
					<param name="day_id" value="5"/>
					<param name="visible" value="true"/>
				</include>	
				<include content="WeatherContentDailyItem">
					<param name="day_id" value="1"/>
					<param name="visible" value="true"/>
				</include>
				<include content="WeatherContentDailyItem">
					<param name="day_id" value="2"/>
					<param name="visible" value="true"/>
				</include>
				<include content="WeatherContentDailyItem">
					<param name="day_id" value="3"/>
					<param name="visible" value="true"/>
				</include>
				<include content="WeatherContentDailyItem">
					<param name="day_id" value="4"/>
					<param name="visible" value="true"/>
				</include>
				<include content="WeatherContentDailyItem">
					<param name="day_id" value="5"/>
					<param name="visible" value="true"/>
				</include>
			</content>
			<include content="BusyItem">
				<param name="id" value="$PARAM[id]"/>
				<param name="icon" value="Busy.png"/>
			</include>
		</control>
	</include>
	<include name="WeatherDash_ControlLayout">
		<control type="image">
			<right>5</right>
			<texture>Shadow.png</texture>
			<include>openclosevisible</include>
		</control>
		<control type="image">
			<description>background</description>
			<right>5</right>
			<colordiffuse>menudiffuse</colordiffuse>
			<texture border="4">masks/Default_sharp.png</texture>
		</control>
		<control type="label">
			<left>80</left>
			<right>10</right>
			<top>4</top>
			<height>30</height>
			<font>bebas24</font>
			<align>left</align>
			<textcolor>white</textcolor>
			<shadowcolor>grey3</shadowcolor>
			<label>$INFO[ListItem.Label]</label>
		</control>
		<control type="label">
			<left>80</left>
			<right>10</right>
			<top>34</top>
			<height>30</height>
			<font>bebas24</font>
			<align>left</align>
			<textcolor>white</textcolor>
			<shadowcolor>grey3</shadowcolor>
			<label>$INFO[ListItem.Label2]$INFO[Weather.Conditions, - ,]</label>
		</control>
		<control type="image">
			<description>background</description>
			<left>80</left>
			<right>20</right>
			<top>66</top>
			<height>2</height>
			<colordiffuse>menudiffuse</colordiffuse>
			<texture border="1">Separator1.png</texture>
		</control>
		<control type="label">
			<left>80</left>
			<right>20</right>
			<top>70</top>
			<height>30</height>
			<font>bebas24</font>
			<align>left</align>
			<textcolor>white</textcolor>
			<shadowcolor>grey3</shadowcolor>
			<label>$INFO[Weather.Location]</label>
		</control>
		<control type="multiimage">
			<description>background</description>
			<left>4</left>
			<top>8</top>
			<width>70</width>
			<height>90</height>
			<timeperimage>100</timeperimage>
			<randomize>false</randomize>
			<fadetime>10</fadetime>
			<aspectratio>keep</aspectratio>
			<imagepath>$INFO[ListItem.Icon]</imagepath>
		</control>
	</include>
</includes>
