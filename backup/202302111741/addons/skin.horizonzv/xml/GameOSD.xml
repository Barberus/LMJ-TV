<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="true">1103</defaultcontrol>
	<include>openclosevisible</include>
	<depth>DepthOSD</depth>
	<controls>
		<include>BlackBack</include>
		<include>Multiimage</include>
		<control type="group" id="1">
			<visible>!Window.IsActive(1101) + !Window.IsActive(GameVideoFilter) + !Window.IsActive(GameStretchMode) + !Window.IsActive(GameControllers) + !Window.IsActive(GameVideoRotation)</visible>
			<control type="group" id="10">
				<visible>System.GetBool(gamesgeneral.showosdhelp)</visible>
				<defaultcontrol always="true">1103</defaultcontrol>
				<centerleft>50%</centerleft>
				<height>1040</height>
				<centertop>50%</centertop>
				<width>700</width>
				<include>openclosebox</include>
				<include content="DialogInfoBackgroundParam">
					<param name="width" value="700" />
					<param name="height" value="800" />
					<param name="bottomimage" value="740" />
					<param name="id" value="2" />
					<param name="HeaderLabel" value="$LOCALIZE[35221]" />
				</include>
				<control type="group" id="1000">
					<top>80</top>
					<control type="group" id="1100">
						<control type="gamecontroller" id="1102">
							<top>102</top>
							<left>30</left>
							<width>640</width>
							<height>640</height>
						</control>
						<control type="textbox">
							<description>Additional help text. This will be removed in future versions.</description>
							<bottom>200</bottom>
							<left>30</left>
							<right>30</right>
							<height>130</height>
							<label>$LOCALIZE[35236]</label>
						</control>
						<control type="textbox" id="1101">
							<description>Help text</description>
							<top>790</top>
							<left>30</left>
							<right>30</right>
							<height>60</height>
							<font>impacted18</font>
							<align>center</align>
						</control>
						<control type="button">
							<description>Button to close the dialog</description>
							<top>0</top>
							<bottom>0</bottom>
							<left>0</left>
							<right>0</right>
							<texturefocus />
							<texturenofocus />
							<onclick>Action(close)</onclick>
						</control>
					</control>
				</control>
			</control>
			<control type="group" id="20">
				<visible>!System.GetBool(gamesgeneral.showosdhelp)</visible>
				<centerleft>50%</centerleft>
				<height>440</height>
				<centertop>50%</centertop>
				<width>700</width>
				<include>openclosebox</include>
				<include content="DialogInfoBackgroundParam">
					<param name="width" value="700" />
					<param name="height" value="440" />
					<param name="bottomimage" value="" />
					<param name="id" value="3" />
					<param name="HeaderLabel" value="$LOCALIZE[35221]" />
				</include>
				<control type="group" id="2000">
					<top>80</top>
					<control type="list" id="1103">
						<defaultcontrol always="true">2101</defaultcontrol>
						<height>400</height>
						<orientation>vertical</orientation>
						<pagecontrol>2200</pagecontrol>
						<itemlayout width="700" height="80">
							<control type="image">
								<left>20</left>
								<width>64</width>
								<aspectratio>keep</aspectratio>
								<info>ListItem.Icon</info>
							</control>
							<control type="label">
								<left>90</left>
								<right>30</right>
								<height>80</height>
								<info>ListItem.Label</info>
							</control>
							<control type="label">
								<right>30</right>
								<align>right</align>
								<height>80</height>
								<info>ListItem.Label2</info>
							</control>
						</itemlayout>
						<focusedlayout width="700" height="80">
							<control type="image">
								<left>20</left>
								<right>20</right>
								<texture>buttons\ButtonFO.png</texture>
							</control>
							<control type="image">
								<left>20</left>
								<width>64</width>
								<aspectratio>keep</aspectratio>
								<info>ListItem.Icon</info>
							</control>
							<control type="label">
								<left>90</left>
								<right>30</right>
								<height>80</height>
								<textcolor>black</textcolor>
								<shadowcolor>grey</shadowcolor>
								<info>ListItem.Label</info>
							</control>
							<control type="label">
								<right>30</right>
								<align>right</align>
								<height>80</height>
								<textcolor>black</textcolor>
								<shadowcolor>grey</shadowcolor>
								<info>ListItem.Label2</info>
							</control>
						</focusedlayout>
						<content>
							<item id="2101">
								<description>Pause / Resume button</description>
								<label>$LOCALIZE[35224]</label>
								<label2>$LOCALIZE[31059]</label2>
								<icon>osd/PlayFO.png</icon>
								<onclick>Play</onclick>
							</item>
							<item id="2102">
								<description>Reset button</description>
								<label>$LOCALIZE[13007]</label>
								<icon>osd/PrevTrackFO.png</icon>
								<onclick>PlayerControl(Reset)</onclick>
							</item>
							<item id="2103">
								<description>Stop button</description>
								<label>$LOCALIZE[35222]</label>
								<label2>$LOCALIZE[31060]</label2>
								<icon>osd/StopFO.png</icon>
								<onclick>Stop</onclick>
							</item>
							<item id="2108">
								<description>Settings button</description>
								<label>$LOCALIZE[5]</label>
								<icon>osd/PresetSettingsFO.png</icon>
								<onclick>SetProperty(settingslist_content,games,home)</onclick>
								<onclick>SetProperty(settingslist_header,$LOCALIZE[5],home)</onclick>
								<onclick>ActivateWindow(1104)</onclick>
							</item>
						</content>
					</control>
					<control type="scrollbar" id="2200">
						<top>-10</top>
						<right>0</right>
						<width>12</width>
						<orientation>vertical</orientation>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>
